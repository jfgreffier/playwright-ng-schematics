{
  "compilerOptions": {
    "baseUrl": "tsconfig",
    "outDir": "lib/",
    "lib": ["es2018", "dom"],
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "rootDir": "src/",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strictNullChecks": true,
    "target": "es6",
    "types": ["node", "jest"]
  },
  "include": ["src/**/*"],
  "exclude": ["src/schematics/*/files/**/*", "src/**/*spec.ts"]
}
